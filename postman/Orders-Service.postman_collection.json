{
	"info": {
		"_postman_id": "orders-service-collection",
		"name": "E-commerce Orders Service",
		"description": "Complete collection for Orders Service - Order management with real-time WebSocket updates",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{access_token}}",
				"type": "string"
			}
		]
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3004",
			"type": "string"
		},
		{
			"key": "access_token",
			"value": "",
			"type": "string"
		},
		{
			"key": "order_id",
			"value": "",
			"type": "string"
		},
		{
			"key": "user_id",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Order Management",
			"item": [
				{
					"name": "1. Create Order",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const response = pm.response.json();",
									"    if (response.data && response.data.order) {",
									"        pm.collectionVariables.set('order_id', response.data.order._id);",
									"        pm.collectionVariables.set('user_id', response.data.order.userId);",
									"        console.log('New order ID saved:', response.data.order._id);",
									"        console.log('Order number:', response.data.order.orderNumber);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{access_token}}",
									"type": "string"
								}
							]
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"items\": [\n    {\n      \"productId\": \"product_id_here\",\n      \"productName\": \"Premium Wireless Headphones\",\n      \"quantity\": 2,\n      \"price\": 199.99\n    },\n    {\n      \"productId\": \"product_id_here_2\",\n      \"productName\": \"Smart Watch\",\n      \"quantity\": 1,\n      \"price\": 299.99\n    }\n  ],\n  \"totalAmount\": 699.97,\n  \"shippingAddress\": {\n    \"street\": \"123 Main Street\",\n    \"city\": \"New York\",\n    \"state\": \"NY\",\n    \"zipCode\": \"10001\",\n    \"country\": \"United States\"\n  },\n  \"paymentMethod\": 4,\n  \"paymentStatus\": 2\n}"
						},
						"url": {
							"raw": "{{base_url}}/v1/orders",
							"host": ["{{base_url}}"],
							"path": ["v1", "orders"]
						},
						"description": "Create a new order. Payment Method: 1=Credit Card, 2=Debit Card, 3=PayPal, 4=Cash on Delivery. Payment Status: 1=Paid, 2=Pending, 3=Failed, 4=Refunded"
					},
					"response": []
				},
				{
					"name": "2. Get Order by ID",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{access_token}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/v1/orders/{{order_id}}",
							"host": ["{{base_url}}"],
							"path": ["v1", "orders", "{{order_id}}"]
						},
						"description": "Get a specific order by ID (user can view own orders, admin can view all)"
					},
					"response": []
				},
				{
					"name": "3. Get User's Orders",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{access_token}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/v1/orders/user/{{user_id}}?status=all&sortBy=date&sortOrder=desc",
							"host": ["{{base_url}}"],
							"path": ["v1", "orders", "user", "{{user_id}}"],
							"query": [
								{
									"key": "status",
									"value": "all",
									"description": "Filter by status: all, 1=Pending, 2=Processing, 3=Shipped, 4=Delivered, 5=Cancelled"
								},
								{
									"key": "search",
									"value": "",
									"description": "Search by order number or product name",
									"disabled": true
								},
								{
									"key": "sortBy",
									"value": "date",
									"description": "Sort by: date or amount"
								},
								{
									"key": "sortOrder",
									"value": "desc",
									"description": "Sort order: asc or desc"
								}
							]
						},
						"description": "Get all orders for a specific user with optional filtering, search, and sorting (user can view own orders, admin can view any user's orders)"
					},
					"response": []
				},
				{
					"name": "4. Update Order",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{access_token}}",
									"type": "string"
								}
							]
						},
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"shippingAddress\": {\n    \"street\": \"456 Oak Avenue\",\n    \"city\": \"Los Angeles\",\n    \"state\": \"CA\",\n    \"zipCode\": \"90001\",\n    \"country\": \"United States\"\n  }\n}"
						},
						"url": {
							"raw": "{{base_url}}/v1/orders/{{order_id}}",
							"host": ["{{base_url}}"],
							"path": ["v1", "orders", "{{order_id}}"]
						},
						"description": "Update order details (shipping address, etc.)"
					},
					"response": []
				},
				{
					"name": "5. Cancel Order",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{access_token}}",
									"type": "string"
								}
							]
						},
						"method": "PATCH",
						"header": [],
						"url": {
							"raw": "{{base_url}}/v1/orders/{{order_id}}/cancel",
							"host": ["{{base_url}}"],
							"path": ["v1", "orders", "{{order_id}}", "cancel"]
						},
						"description": "Cancel an order (user can cancel own order if not delivered, admin can cancel any order)"
					},
					"response": []
				}
			],
			"description": "Core order management endpoints"
		},
		{
			"name": "Admin Endpoints",
			"item": [
				{
					"name": "6. Get All Orders (Admin)",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{access_token}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/v1/orders",
							"host": ["{{base_url}}"],
							"path": ["v1", "orders"]
						},
						"description": "Get all orders in the system (Admin only)"
					},
					"response": []
				},
				{
					"name": "7. Update Order Status (Admin)",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{access_token}}",
									"type": "string"
								}
							]
						},
						"method": "PATCH",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"status\": 3,\n  \"trackingNumber\": \"TRK123456789\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/v1/orders/{{order_id}}/status",
							"host": ["{{base_url}}"],
							"path": ["v1", "orders", "{{order_id}}", "status"]
						},
						"description": "Update order status (Admin only). Status: 1=Pending, 2=Processing, 3=Shipped, 4=Delivered, 5=Cancelled. Optionally include trackingNumber when status is Shipped."
					},
					"response": []
				},
				{
					"name": "8. Delete Order (Admin)",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{access_token}}",
									"type": "string"
								}
							]
						},
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{base_url}}/v1/orders/{{order_id}}",
							"host": ["{{base_url}}"],
							"path": ["v1", "orders", "{{order_id}}"]
						},
						"description": "Delete an order (Admin only)"
					},
					"response": []
				}
			],
			"description": "Admin-only order management endpoints"
		}
	]
}
