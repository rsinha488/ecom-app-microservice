# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/auth_db

# JWT Secrets (CHANGE IN PRODUCTION - Use strong random strings)
ACCESS_TOKEN_SECRET=your-super-secret-access-token-key-change-in-production-min-32-chars
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-in-production-min-32-chars
ID_TOKEN_SECRET=your-super-secret-id-token-key-change-in-production-min-32-chars

# Token Expiry
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d
ID_TOKEN_EXPIRY=1h

# OAuth2/OIDC Configuration
ISSUER=http://localhost:3000
DEFAULT_CLIENT_ID=ecommerce-client
DEFAULT_CLIENT_SECRET=ecommerce-secret-change-in-production
CLIENT_ID=ecommerce-client

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3006,http://localhost:3005

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
