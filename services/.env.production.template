# Production Environment Template
# Copy this to .env.production and fill in production values

# Service Configuration
PORT=3000
NODE_ENV=production

# Database
MONGODB_URI=mongodb://production-host:27017/database_name
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database_name?retryWrites=true&w=majority

# OAuth2 Configuration (CRITICAL: Change these in production!)
ACCESS_TOKEN_SECRET=CHANGE_THIS_TO_LONG_RANDOM_STRING_MIN_32_CHARS
REFRESH_TOKEN_SECRET=CHANGE_THIS_TO_DIFFERENT_LONG_RANDOM_STRING
ID_TOKEN_SECRET=CHANGE_THIS_TO_ANOTHER_DIFFERENT_LONG_RANDOM_STRING

# Token Expiry
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d
ID_TOKEN_EXPIRY=1h

# Issuer (Change to production URL with HTTPS)
ISSUER=https://your-production-domain.com

# OAuth2 Client Configuration
CLIENT_ID=production-client-id
CLIENT_SECRET=CHANGE_THIS_TO_SECURE_CLIENT_SECRET

# CORS (Comma-separated list of allowed origins)
ALLOWED_ORIGINS=https://app.yourdomain.com,https://admin.yourdomain.com

# Logging
LOG_LEVEL=error

# Rate Limiting (already configured in code based on NODE_ENV)
# Production uses stricter limits automatically

# Security
# Trust proxy is enabled automatically in production mode
# Helmet security headers enabled automatically

